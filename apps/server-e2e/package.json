{
  "name": "@drop-radio/server-e2e",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "tags": [
      "scope:server"
    ],
    "implicitDependencies": [
      "@drop-radio/server"
    ],
    "targets": {
      "docker-run": {
        "command": "docker run --mount type=bind,src=$(pwd)/{projectRoot}/test-server-audio-files,dst=/drop-radio/server/input -p 3000:3000 -t drop-radio-server",
        "continuous": true,
        "dependsOn": [
          "@drop-radio/server:docker-build"
        ]
      },
      "e2e": {
        "executor": "@nx/jest:jest",
        "outputs": [
          "{projectRoot}/test-output/jest/coverage"
        ],
        "options": {
          "jestConfig": "apps/server-e2e/jest.config.ts",
          "passWithNoTests": true
        },
        "dependsOn": [
          "docker-run"
        ]
      }
    }
  }
}
