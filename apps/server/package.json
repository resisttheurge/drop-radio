{
  "name": "@drop-radio/server",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "tags": [
      "scope:server"
    ],
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/server/dist",
          "format": [
            "cjs"
          ],
          "main": "apps/server/src/main.ts",
          "tsConfig": "apps/server/tsconfig.app.json",
          "assets": [
            "apps/server/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "bundle": true,
            "thirdParty": true,
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@drop-radio/server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@drop-radio/server:build:development"
          },
          "production": {
            "buildTarget": "@drop-radio/server:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "command": "docker build apps/server/ -t drop-radio-server",
        "dependsOn": [
          "build"
        ]
      },
      "docker-run": {
        "command": "docker run --mount type=bind,src={args.inputDir},dst=/drop-radio/server/input -p 3000:3000 -t drop-radio-server",
        "continuous": true,
        "dependsOn": [
          "docker-build"
        ]
      }
    }
  }
}
